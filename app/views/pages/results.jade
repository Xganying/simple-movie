//- result.jade

//- 继承layout的布局
extends ../layout

//- 声明主要的内容
block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 #{keyword}
                .panel-body
                    if movies && movies.length > 0
                        each item in movies
                            .col-md-2
                                .thumbnail
                                    a(href="/movie/#{item._id}")
                                        img(src="#{item.poster}", alt="#{item.title}")
                                    .caption
                                        h3  #{item.title}
                                        p: a.btn.btn-primary(href="/movie/#{item._id}", role="button")  观看预告片
            ul.pagination
                - for(var i = 0; i < totalPage; i++){
                    - if(currentPage == (i+1)){
                        li.active
                            span #{currentPage}
                    - }
                    - else{
                        li
                            a(href='/results?#{query}&p=#{i}') #{i + 1}
                    - }
               - }