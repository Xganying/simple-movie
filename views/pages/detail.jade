//继承layout的布局
extends ../layout

//声明主要的内容
block content
    .container
        .row
            each item in movie
                .col-md-7
                    embed(src="#{movie.flash}", allowFullScreen="true", width="720", height="600", align="middle", type="application/x-shockwave-flash")
                .col-md-5
                    dl.dl-horizontal
                        dt  电影名字
                        dd=movie.title
                        dt  导演
                        dd=movie.doctor
                        dt  国家
                        dd=movie.country
                        dt  语音
                        dd=movie.language
                        dt  上映年份
                        dd=movie.year
                        dt  简介
                        dd=movie.summary
